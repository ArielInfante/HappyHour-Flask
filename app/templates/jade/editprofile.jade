- extends "base.jade"

- block content

form(action="{{ url_for('user.editprofile') }}", class="navbar-form navbar-right", method="POST")
    = form.csrf_token
    .form-group
        = form.username.label
        = form.username(class="form-control")
    .form-group
        = form.privacy_option.label
        = form.privacy_option(class="form-control")

- endblock